<Window x:Class="Bolnica.PatientOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica"
        mc:Ignorable="d"
        Title="PatientOptions" Height="450" Width="800">
    <Grid>
        <Button Content="Create Patient" HorizontalAlignment="Left" Margin="101,68,0,0" VerticalAlignment="Top" Height="50" Width="100" Click="AddPatientWin" />
        <Button Content="Create Guest" HorizontalAlignment="Left" Margin="280,68,0,0" VerticalAlignment="Top" Height="50" Width="100" Click="AddGuestWin"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="280,167,0,0" VerticalAlignment="Top" Height="50" Width="100" />
        <Button Content="Delete" HorizontalAlignment="Left" Margin="539,68,0,0" VerticalAlignment="Top" Height="19" Width="67" Click="RemovePatient"/>

        <Label Content="JMBG
               " HorizontalAlignment="Left" Margin="487,28,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.93,0.6" Width="63"/>
        <TextBox x:Name="ID" HorizontalAlignment="Left" Margin="555,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Read" HorizontalAlignment="Left" Margin="615,68,0,0" VerticalAlignment="Top" Height="19" Width="80" Click="ReadPatientWin"/>
    </Grid>
</Window>
